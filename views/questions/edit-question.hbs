<h1 class="title">Edit Questions</h1>

<form method="POST" action="/questions/{{question._id}}/edit">

  <label>Question</label>
  <input
    type="text"
    name="question"
    required
    minlength="3"
    maxlength="50"
    value="{{question.question}}"
  />

  <label>Correct Answer</label>
  <input
    type="text"
    name="correct_answer"
    maxlength="20"
    value="{{question.correct_answer}}"
  />

  <label>Incorrect Answer1</label>
  <input
    type="text"
    name="incorrect_answers_0"
    maxlength="20"
    value="{{question.incorrect_answers.[0]}}"
  />

  <label>Incorrect Answer2</label>
  <input
    type="text"
    name="incorrect_answers_1"
    maxlength="20"
    value="{{question.incorrect_answers.[1]}}"
  />

  <label>Category</label>
  <select name="category" id="category-select">
      {{#each arrayCurrentCategory}}
        {{#if this.isCurrent}}
          <option value={{this.category}} selected>{{this.category}}</option>
        {{else}}
          <option value={{this.category}}>{{this.category}}</option>
        {{/if}}
      {{/each}}
  </select>

  <label>Difficulty</label>
  <select name="difficulty" id="difficulty-select">
      {{#each arrayCurrentDifficulty}}
        {{#if this.isCurrent}}
          <option value={{this.difficulty}} selected>{{this.difficulty}}</option>
        {{else}}
          <option value={{this.difficulty}}>{{this.difficulty}}</option>
        {{/if}}
      {{/each}}
  </select>

  <label><input
      type="checkbox"
      name="isVisible"
      {{#if question.isVisible}}
      checked="{{question.isVisible}}"
      {{/if}}
    />Visible</label>

  <label>Image</label>
  <input
    type="text"
    name="question_img"
    maxlength="80"
    value="{{question.question_img}}"
  />

  {{#if error}}
    <p style="color: red;">{{error}}</p>
  {{/if}}

  <button type="submit">Save changes</button>

</form>

<a class="homelink" href="/">Back Home</a>