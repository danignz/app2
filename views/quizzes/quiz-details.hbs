<h1 class="title">Detail of a Quiz</h1>

<div>
  <h3>ID: {{this._id}}</h3>
  <h3>Title: {{this.title}}</h3>
  <h4>Description: {{this.description}}</h4>
  <h4>Category: {{this.category}}</h4>
  <h4>Difficulty: {{this.difficulty}}</h4>
  <h4>Points required: {{this.points_required}}</h4>
  <h4>Number of questions: {{this.num_questions}}</h4>
  <h4>Visibility: {{this.isVisible}}</h4>
  {{#if this.quiz_img}}
    <img src="{{this.quiz_img}}" alt="Image of quiz" />
  {{else}}
    <img src="/images/quizzes/default.jpg" alt="Not image avariable" />
  {{/if}}
  <h4>List of Questions:</h4>
  {{#each this.question}}
    <h3><a href="/questions/{{this._id}}">ID: {{this._id}}</a></h3>
  {{/each}}
</div>

<form method="POST" action="/quizzes/{{this._id}}/delete">
  <button type="submit">Delete</button>
</form>

<button
  onclick="location.href='/quizzes/{{this._id}}/edit'"
  type="button"
>Edit</button>

<a class="homelink" href="/">Back Home</a>