<h1 class="title">List of Quizzes</h1>

<div class="card-container">
  {{#if quizzes}}
    {{#each quizzes}}
        <div class="card">
        <h4><a href="/quizzes/{{this._id}}">{{this.title}}</a></h4>
        {{#if this.quiz_img}}
          <a href="/quizzes/{{this._id}}"><img
              src="{{this.quiz_img}}"
              alt="Image of quiz"
            /></a>
        {{else}}
          <img src="/images/quizzes/default.jpg" alt="Not image avariable" />
        {{/if}}
           <h6>{{this.category}} | {{this.difficulty}}</h6>
           <h6>Points Required: {{this.points_required}} | Questions: {{this.num_questions}}</h6>
        </div>
    {{/each}}
  {{else}}
    <h3>Not quizzes avariable</h3>
  {{/if}}
</div>

<p>
  <a class="homelink noformcontainer" href="/">&larr; Back Home</a>
</p>