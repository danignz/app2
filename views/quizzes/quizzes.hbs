<div class="container">
  <h1 class="title">List of Quizzes</h1>

  <div class="card-container">

    {{#if quizzes}}
      {{#each quizzes}}
        <div class="card-select">
          {{#if this.quiz_img}}
            <a href="/quizzes/{{this._id}}"><img
                src="{{this.quiz_img}}"
                alt="Image of quiz"
              /></a>
          {{else}}
            <img src="/images/quizzes/default.jpg" alt="Not image avariable" />
          {{/if}}
          <h2><a href="/quizzes/{{this._id}}">{{this.title}}</a></h2>

          <div>
            <h4>{{this.points_required}} points required </h4>
            <a style="color:#6d37ff;">&#9733;&#9733;&#9733;&#9733;&#9733;</a>
            <h4>{{this.num_questions}} questions</h4>
          </div>

        </div>
      {{/each}}
    {{else}}
      <h3>Not quizzes avariable</h3>
    {{/if}}
  </div>

  <footer class="footer">
    <ul>
      <li><button onclick="history.back()"><img
            width="45"
            height="45"
            src="/navbar/back.png"
          /></button></li>
      <li>
        <form action="/auth/logout" method="POST"><button type="submit"><img
              width="45"
              height="45"
              src="/navbar/logout.png"
            /></button></form>
      </li>
    </ul>
  </footer>

</div>