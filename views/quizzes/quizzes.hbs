<div class="container">
  <h1 class="title">List of Quizzes</h1>

  <div class="card-container">
    {{#if quizzes}}
      {{#each quizzes}}
        <div class="card">
          <h4 class="titleCard"><a
              href="/quizzes/{{this._id}}"
            >{{this.title}}</a></h4>
          {{#if this.quiz_img}}
            <a href="/quizzes/{{this._id}}"><img
                src="{{this.quiz_img}}"
                alt="Image of quiz"
              /></a>
          {{else}}
            <img src="/images/quizzes/default.jpg" alt="Not image avariable" />
          {{/if}}
          <!-- <h6>{{this.category}} | {{this.difficulty}}</h6> -->
          <h6 class="difficultyCard">{{this.difficulty}}</h6>
          <div>
            <h6 class="pointsCard">Points Required:
              {{this.points_required}}
              <br />
              Questions:
              {{this.num_questions}}</h6>
          </div>
        </div>
      {{/each}}
    {{else}}
      <h3>Not quizzes avariable</h3>
    {{/if}}
  </div>

  <footer class="footer">
    <ul>
      <li><button onclick="history.back()"><img
            width="45"
            height="45"
            src="/navbar/back.png"
          /></button></li>
      <li>
        <form action="/auth/logout" method="POST"><button type="submit"><img
              width="45"
              height="45"
              src="/navbar/logout.png"
            /></button></form>
      </li>
    </ul>
  </footer>

</div>